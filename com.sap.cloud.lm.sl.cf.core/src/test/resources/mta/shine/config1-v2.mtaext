_schema-version: "2.0.0"
ID: com.sap.xs2.samples.shine.config1
extends: com.sap.xs2.samples.shine

targets: [CF-TRIAL]

modules:
  - name: shine
    parameters:
      host: i027947-shine
      memory: 128M

  - name: shine-xsjs
    parameters:
      host: i027947-shine-xsjs
      memory: 256M
    provides: 
      - name: xsjs
        properties:
          url: "http://i027947-shine-xsjs.cfapps.neo.ondemand.com"

  - name: shine-odata
    parameters:
      host: i027947-shine-odata
      memory: 256M
    provides: 
      - name: xsodata
        properties:
          url: "http://i027947-shine-odata.cfapps.neo.ondemand.com"

resources:
  - name: shine-database
    parameters:
      config:
        host: lddbjb3.wdf.sap.corp
        port: 30015
        user: XS2SHINE 
        password: Abcd1234
        url: "jdbc:sap://lddbjb3.wdf.sap.corp:30015/?currentschema=SAP_HANA_DEMO"
        driver: com.sap.db.jdbc.Driver

  - name: uaa
    parameters:
      config:
        clientid: xs2.java
        clientsecret: javaclientsecret
        url: "http://sap-login.cfapps.neo.ondemand.com"
        tags: [xsuaa]
