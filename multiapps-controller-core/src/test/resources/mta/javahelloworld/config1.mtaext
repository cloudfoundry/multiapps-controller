extends: com.sap.xs2.samples.javahelloworld

target-platforms: [CF-TRIAL]

modules:
  - name: java-hello-world
    properties:
      host: i027947-java-hello-world
      memory: 128M

  - name: java-hello-world-backend
    properties:
      host: i027947-java-hello-world-backend
      memory: 512M
      instances: 1
