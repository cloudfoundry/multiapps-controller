target-platforms: [CF-DEV]

modules:
  - name: shine
    properties:
      host: i027947-shine
      memory: 756M
      
  - name: shine-xsjs
    properties:
      host: i027947-shine-xsjs
      memory: 256M
    provides: 
      - name: xsjs
        properties:
          url: "http://i027947-shine-xsjs.cf.sap-cf.com"
      
  - name: shine-odata
    properties:
      host: i027947-shine-odata
      memory: 256M
    provides: 
      - name: xsodata
        properties:
          url: "http://i027947-shine-odata.cf.sap-cf.com"

resources:
